<h4 class="patients_pad"> Use this page to enter new patient details </h4>

<% @patient.errors.each do |attribute, message| %>
<div class= "alert" > <%= attribute %> : <%= message %>
  </div>
<% end %>

<%= form_for @patient do |f| %>
  <div class="form-group">
    <%= f.label :name %>:
    <%= f.text_field :name, class: "form-control", placeholder: "eg. Felix" %>
  </div>
  <div class="form-group">
    <%= f.label :dob %>:
    <%= f.text_field :dob, class: "form-control", placeholder: "eg. 2019-04-15 00:00:00 UTC"  %>
  </div>
  <div class="form-group">
    <%= f.label :animal %>:
    <%= f.text_field :animal, class: "form-control", placeholder: "eg. Fish" %>
  </div>
<%= f.submit 'Add new patient' %>
<% end %>
