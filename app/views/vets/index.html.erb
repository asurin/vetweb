<h4 class="vets_pad"> Listing all vets </h4>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Specialty</th>
        <th scope="col">ID number</th>
    </tr>
  </thead>

  <tbody>
    <% @vet.each do |vet| %>
      <tr>
        <td><%= link_to vet.name, vet_path(vet.id) %></td>
        <td><%= vet.specialty %></td>
        <td><%= vet.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-light btn-outline-success" style="float:right"><%= link_to 'Click here to add new vet', new_vet_path %></button>

<button type="button" class="btn btn-light btn-sm btn-outline-secondary"><%= link_to 'Back to home screen', root_path %></button>
