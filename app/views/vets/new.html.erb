<h4 class="vets_pad"> Use this page to enter new vet details </h4>

<% @vet.errors.each do |attribute, message| %>
<div class= "alert" > <%= attribute %> : <%= message %>
  </div>
<% end %>

<%= form_for @vet do |f| %>
<div class="form-group">
  <%= f.label :name %>:
  <%= f.text_field :name, class: "form-control", placeholder: "eg. Peter Piper" %>
</div>
<div class="form-group">
  <%= f.label :specialty %>:
  <%= f.text_field :specialty, class: "form-control", placeholder: "eg. Equine"  %>
</div>

  <%= f.submit 'Add new vet' %>

<% end %>
